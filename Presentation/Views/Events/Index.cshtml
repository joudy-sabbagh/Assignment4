@* Views/Events/Index.cshtml *@
@model IEnumerable<Application.DTOs.EventListDTO>

    @{
    ViewData["Title"] = "Events";
    }

    <h1>Events</h1>
    <p><a asp-action="Create" class="btn btn-primary">Create New</a></p>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Date</th>
                <th>Normal Price</th>
                <th>VIP Price</th>
                <th>Backstage Price</th>
                <th>Venue</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ev in Model)
    {
            <tr>
                <td>@ev.Name</td>
                <td>@ev.EventDate:yyyy-MM-dd</td>
                <td>@ev.NormalPrice</td>
                <td>@ev.VIPPrice</td>
                <td>@ev.BackstagePrice</td>
                <td>@ev.VenueName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@ev.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@ev.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
