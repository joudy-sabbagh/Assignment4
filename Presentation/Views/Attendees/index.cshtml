@using Application.DTOs
@model Presentation.Models.PagedListViewModel<AttendeeListDTO>

    @{
    ViewData["Title"] = "Attendees";
    }

    <h1>Attendees</h1>

    <table class="table table-striped">
        <thead>
            <tr><th>Name</th><th>Email</th><th></th></tr>
        </thead>
        <tbody>
            @foreach (var a in Model.Items)
    {
            <tr>
                <td>@a.Name</td>
                <td>@a.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@a.Id" class="btn btn-sm btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@a.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>

    <nav aria-label="Attendee pages">
        <ul class="pagination">
            @for (int p = 1; p <= Model.TotalPages; p++)
    {
            <li class="page-item @(p == Model.PageNumber ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@p">@p</a>
            </li>
    }
        </ul>
    </nav>

    <a asp-action="Create" class="btn btn-success">Create New Attendee</a>
