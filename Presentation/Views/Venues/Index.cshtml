@model IEnumerable<MyMVCApp.Models.Venue>
@{
    ViewData["Title"] = "Venues";
}

<h2>Venues</h2>
<a class="btn btn-primary" asp-action="Create">Add New Venue</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Location</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VenueId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.VenueId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
