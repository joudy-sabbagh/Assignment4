@* Views/Venues/Index.cshtml *@
@model IEnumerable<Application.DTOs.VenueListDTO>

    @{
    ViewData["Title"] = "Venues";
    }

    <h1>Venues</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Capacity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in Model)
    {
            <tr>
                <td>@v.Name</td>
                <td>@v.Location</td>
                <td>@v.Capacity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@v.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@v.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
