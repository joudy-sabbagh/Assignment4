@model MyMVCApp.Models.Event
@{
    ViewData["Title"] = "Edit Event";
}

<h2>Edit Event</h2>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="EventId" />
    
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="EventDate"></label>
        <input asp-for="EventDate" type="date" class="form-control" />
        <span asp-validation-for="EventDate" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label>Normal Price</label>
        <input asp-for="NormalPrice" type="number" class="form-control" step="any" />
        <span asp-validation-for="NormalPrice" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label>VIP Price</label>
        <input asp-for="VIPPrice" type="number" class="form-control" step="any" />
        <span asp-validation-for="VIPPrice" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label>Backstage Price</label>
        <input asp-for="BackstagePrice" type="number" class="form-control" step="any" />
        <span asp-validation-for="BackstagePrice" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="VenueId"></label>
        <select asp-for="VenueId" class="form-control"
                asp-items="@(new SelectList(ViewData["Venues"] as IEnumerable<MyMVCApp.Models.Venue>, "VenueId", "Name"))">
        </select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-warning">Update</button>
</form>

<partial name="_ValidationScriptsPartial" />
