@model MyMVCApp.Models.Event
@using MyMVCApp.Models
@{
    ViewData["Title"] = "Delete Event";
}

<h2>Delete Event</h2>

<div>
    <h4>Are you sure you want to delete this event?</h4>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Event Date</dt>
        <dd class="col-sm-10">@Model.EventDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Venue</dt>
        <dd class="col-sm-10">@Model.Venue?.Name</dd>
        <dt class="col-sm-2">Normal Price</dt>
        <dd class="col-sm-10">@Model.NormalPrice</dd>
        <dt class="col-sm-2">VIP Price</dt>
        <dd class="col-sm-10">@Model.VIPPrice</dd>
        <dt class="col-sm-2">Backstage Price</dt>
        <dd class="col-sm-10">@Model.BackstagePrice</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="EventId" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index">Back to List</a>
</form>
